#!/usr/bin/env python3
"""Thin orchestration entrypoint for the 3-minute API demo.

Per .cursorrules, this file only parses arguments and calls the runner.
All formatting, IO, and subprocess logic lives in dedicated modules.
"""

from __future__ import annotations

import sys

from scripts.api_demo.demo_args import parse_args  # type: ignore
from scripts.api_demo.demo_runner import run_demo_flow  # type: ignore


def main() -> int:
    args = parse_args()
    return run_demo_flow(budget_s=float(args.budget_s), out_path=args.out)


if __name__ == "__main__":
    sys.exit(main())
